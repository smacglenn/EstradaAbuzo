<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidDrinkzlyBoozeClient" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EA4410</item>
        <item name="android:textColorPrimaryInverse">#FF5722</item>
        <item name="color">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:textColorSecondaryInverse">@color/teal_700</item>
        <item name="colorAccent">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AndroidDrinkzlyBoozeClient.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidDrinkzlyBoozeClient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:color">@color/black</item>
    </style>

    <style name="Theme.AndroidDrinkzlyBoozeClient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:color">@color/black</item>

    </style>
